{{#if addArticle}}
  <h1>New Article</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="article">article</label>
        {{input value=article id="article"}}
      </div>

      <div class="form-group">
        <label for="heading">Heading</label>
        {{input value=heading id="heading"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <button {{action 'saveArticle'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'articleForm'}}>New Article</button>
{{/if}}
